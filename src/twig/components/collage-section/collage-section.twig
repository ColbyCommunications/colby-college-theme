{% import "macros.twig" as macros %}

{% if in_component_library %}
  {% set context = '@context' %}
{% else %}
  {% set context = 'context.twig' %}
{% endif %}

<div class="collage-section full-bleed pt-16 md:pt-24 pb-[100%] md:pb-40 bg-gray-100 space-y-16">
  <div class="collage-section__inner md:grid md:grid-cols-12 gap-x-10 max-w-screen-2xl w-full px-5 my-0 mx-auto">
    <div class="collage-section___context md:col-start-3 md:col-span-8">
      {% include context with {
        size: 'medium',
        align: 'center',
        subheading: subheading,
        heading: heading,
        paragraph: paragraph,
        buttons: {
          items: buttons,
        },
      } %}
    </div>
  </div>
  <div class="collage-section__inner md:grid md:grid-cols-12 gap-x-10 max-w-screen-2xl w-full px-5 my-0 mx-auto">
    <div class="md:col-span-12">
      <div class="collage-section__collage relative">
        <div class="collage-section__image1 relative z-[1] right-[-20px] md:right-auto w-full md:w-1/2">
          <div class="relative pb-[65.28117359413203%] md:pb-[87.5%]">
            {{ macros.picture(
              'absolute w-full h-full object-cover',
              images[0].srcset,
              images[0].src,
              images[0].image.sizes.Hero,
              images[0].image.sizes.Hero,
              images[0].alt,
              in_component_library
            ) }}
          </div>
        </div>
        <div class="collage-section__image2 z-[2] absolute top-[80%] md:top-[40%] left-[-20px] md:left-[30%] w-[80%] md:w-[40%]">
          <div class="relative pb-[80.43478260869566%]">
            {{ macros.picture(
              'absolute w-full h-full object-cover',
              images[1].srcset,
              images[1].src,
              images[1].image.sizes.Square,
              images[1].image.sizes.Square,
              images[1].alt,
              in_component_library
            ) }}
          </div>
        </div>
        <div class="collage-section__image3 z-[3] absolute top-[150%] md:top-[10%] right-0 w-[66%] md:w-[44%]">
          <div class="relative pb-[85.18518518518518%] md:pb-[56.31067961165048%]">
            {{ macros.picture(
              'absolute w-full h-full object-cover',
              images[2].srcset,
              images[2].src,
              images[2].image.sizes.Rectangle,
              images[2].image.sizes.Rectangle,
              images[2].alt,
              in_component_library
            ) }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>