{% if in_component_library %}
  {% set context = '@context' %}
{% else %}
  {% set context = 'context.twig' %}
{% endif %}

<div class="context-section">
  <div class="context-section__inner md:grid md:grid-cols-12 gap-x-10 max-w-screen-2xl w-full px-5 my-0 mx-auto">
    <div class="md:col-start-3 md:col-span-8">
      {% include context with {
        size: size,
        subheading: subheading,
        heading: heading,
        paragraph: paragraph,
        buttons: buttons,
        align: 'center',
      } %}
    </div>
  </div>
</div>