{% block html_head_container %}

{% include 'html-header.twig' %}
  {% block head %}
  {% endblock %}
  </head>
{% endblock %}

  <body {{function("body_class")}}>
     <a href="#main" class="skip-to-main">Skip to Main Content</a>
    <div id="app">
      {% if global_alert and global_alert.active == true %}
        {% include 'alert.twig' with global_alert %}
      {% endif %}
      {% include 'header.twig' with {
        utility: utility_menu.items,
        main: main_menu.items,
        headerlogo: headerlogo,
        headerlogo_styles: headerlogo_styles
      } %}
      <main id="main" class="colby-page [&>div+div]:mt-20 md:[&>div+div]:mt-[100px] pb-20 md:pb-[100px]">
        {% block content %}
          Sorry, no content
        {% endblock %}
      </main>
      {% include 'footer.twig' with {
        address: global_address,
        phone: global_phone,
        main: footer_menu.items,
        utility: action_menu.items,
        social: global_social,
        display_athletics_logo: display_athletics_logo,
        footerlogo: footerlogo,
        footerlogo_styles: footerlogo_styles
      } %}
      {% block footer %}
        {{ function('wp_footer') }}
      {% endblock %}
    </div>
  </body>
</html>
